<div class='list-panel'>
  <div class='title'><h1>Photos in <%= @tag.name %><h1></div>
  <div id='items' class='items'>
    <%= render partial: 'images/image', collection: @images %>
    <div class="paginator">
      <%= paginate @images, remote: true %>
    </div>
  </div>
</div>
<%= render 'tags/update_tag' %>
<%= render 'tags/drag_and_drop' %>
<script type="text/javascript">
$(function(){
  $(document.body).off('click', 'nav.pagination a');
  $(document.body).on('click', 'nav.pagination a', function(e) {
    e.preventDefault();
    var url = $(this).attr("href");
    $('#toast p').html("正在加载...");
    $("#toast").show();
    $(".container").load(url, function(){
      window.history.pushState(url, window.title, url);
      $("#toast").hide();
    });
    return false;
  });
  $(window).bind('popstate', function(event) {
    var url = location.href;
    $('#toast p').html("正在加载...");
    $("#toast").show();
    $(".container").load(url, function(){
      $("#toast").hide();
    });
  });
});
</script>
